<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#708090"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnLimpatudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="@android:color/holo_red_light"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnParenteses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="( )"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnPorcentagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnDivisao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="รท"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#708090"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnNum7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnMultiplicacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="x"
            android:textSize="34sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#708090"
        android:orientation="horizontal"
        android:weightSum="4"
        android:textSize="34sp">


        <Button
            android:id="@+id/btnNum4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnSubtracao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="34sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#708090"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnNum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnNum3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnSomar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="34sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#708090"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnMaisouMenos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="29sp" />

        <Button
            android:id="@+id/btnNum0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnVirgula"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text=","
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btnCalculo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="34sp"/>
    </LinearLayout>



</LinearLayout>